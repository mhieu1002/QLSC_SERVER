generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["rhel-openssl-1.0.x", "native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int         @id @default(autoincrement())
  userName   String
  fullName   String
  hash       String
  role       String?
  adminUsers AdminUser[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model AdminUser {
  id           Int        @id @default(autoincrement())
  code         String     @unique
  userName     String
  fullName     String
  hash         String
  role         String
  adminId      Int
  admin        Admin      @relation(fields: [adminId], references: [id])
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  deleted      DateTime?
}

model Department {
  id         Int         @id @default(autoincrement())
  name       String
  code       String      @unique
  slug       String      @unique
  adminUsers AdminUser[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  deleted    DateTime?
}

model Problem {
  id             Int       @id @default(autoincrement())
  adminUserId    Int
  departmentId   Int
  title          String
  industry       String
  contact        String
  status         String
  processingDate DateTime?
  note           String?
  reciever       String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deleted        DateTime?
}
